// Firebase Storage security rules for PumpkinSocial
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile images: users can upload their own profile picture
    match /profile_images/{userId} {
      allow read: if true; // Anyone can read profile images
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Post media (images & videos): authenticated users can upload, anyone can read
    match /posts/{mediaId} {
      allow read: if true; // Anyone can read post media
      allow write: if request.auth != null 
                   && isValidMediaUpload();
    }
    
    // Helper function to validate media uploads
    function isValidMediaUpload() {
      let isImage = request.resource.contentType.matches('image/(jpeg|jpg|png|gif|webp)');
      let isVideo = request.resource.contentType.matches('video/(mp4|mov|avi|mkv)');
      let imageSize = request.resource.size < 10 * 1024 * 1024; // Max 10MB for images
      let videoSize = request.resource.size < 100 * 1024 * 1024; // Max 100MB for videos
      
      return (isImage && imageSize) || (isVideo && videoSize);
    }
    
    // Default: Deny access to any other paths not explicitly allowed
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
